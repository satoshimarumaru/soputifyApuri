
<%- layout("layouts/boilerplate") %>
    <div class="container">
        <h1>気分に合わせて曲を探す</h1>
        <form action="/search" method="GET">
            <div class="form-group">
                <label for="tempo">テンポ (BPM):</label>
                <input type="range" class="form-control-range" id="tempo" name="tempo" min="60" max="200" step="1" value="120">
            </div>

            <div class="form-group">
                <label for="energy">エネルギー (0-1):</label>
                <input type="range" class="form-control-range" id="energy" name="energy" min="0" max="1" step="0.1" value="0.5">
            </div>

            <div class="form-group">
                <label for="mood">気分スケール (0-1):</label>
                <input type="range" class="form-control-range" id="mood" name="mood" min="0" max="1" step="0.1" value="0.5">
            </div>

            <div class="form-group">
                <label for="language">言語選択:</label>
                <select class="form-select" id="language" name="language">
                    <option value="en">洋楽</option>
                    <option value="ja">日本の歌</option>
                </select>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">検索</button>
            </div>
        </form>
    </div>

    

    